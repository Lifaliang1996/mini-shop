page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.lxy-nav-bar__inner .lxy-nav-bar__center {
  padding-left: 0 !important;
}
#search-wrap {
  flex: 1;
  width: 100vw;
  padding: 20px 15px;
  background-color: #fff;
}
#search-wrap .search-panel-wrap .panel-title {
  font-size: 32rpx;
}
#search-wrap .search-panel-wrap .panel-title .icon-re {
  margin-left: 8rpx;
  color: var(--theme-color);
}
#search-wrap .search-panel-wrap .panel-tags {
  display: flex;
  flex-wrap: wrap;
}
#search-wrap .search-panel-wrap .panel-tags .tag {
  margin-top: 15rpx;
  margin-right: 15rpx;
  padding: 8rpx 25rpx;
  color: var(--text-gray);
  background-color: var(--bg-gray);
  border-radius: 20rpx;
  font-size: 26rpx;
}
#goods-wrap {
  flex: 1;
  overflow: hidden;
}
#goods-wrap #goods-list {
  height: calc(100% - 100rpx);
}
