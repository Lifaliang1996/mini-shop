@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(.9);
  }
  to {
    opacity: .6;
    transform: scale(1);
  }
}

#content {
  position: fixed;
  left: 50%;
  bottom: 40%;
  transform: translateX(-50%);
  text-align: center;
}
.icon-logo {
  color: var(--theme-color);
  font-size: 200rpx;
  line-height: 250rpx;
}
.text {
  animation: fadeIn 2s .4s forwards;
  opacity: 0;
  font-size: 26rpx;
  letter-spacing: 2rpx;
}
