page {
  height: 100vh;
  padding-bottom: 50px;
  background-color: var(--bg-gray);
}
#addr-wrap {
  padding: 10px 15px;
  font-size: 26rpx;
  background-color: #fff;
  color: var(--text-gray);
}
#addr-wrap .addr {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
#addr-wrap .addr .iconfont {
  font-size: 26rpx;
}
#goods-list {
  height: calc(100% - 55px);
}
#goods-list .goods-card {
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  margin-top: 10px;
}
#goods-list .goods-card .warp {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  width: 100%;
  height: 220rpx;
}
#goods-list .goods-card .warp .check-box {
  padding-right: 10rpx;
}
#goods-list .goods-card .warp .img {
  height: 180rpx;
  width: 180rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
#goods-list .goods-card .warp .img .van-image {
  width: 100%;
  height: 100%;
}
#goods-list .goods-card .warp .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
#goods-list .goods-card .warp .info .title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
#goods-list .goods-card .warp .info .price-num-wrap {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.weui-slideview__btn-group_warn .weui-slideview__btn {
  background-color: var(--theme-color);
}
.van-action-sheet {
  height: 70%;
}
.van-submit-bar {
  z-index: 10 !important;
  border-top: 1px solid #f8f8f8;
}
